<h2>Rental form!</h2>
<form action="/cat_rental_requests" method="post">

	<label for="cat_rental_request_cat_id">Name</label>
	<select name="cat_rental_request[cat_id]">
	<% @cats.each do |cat| %>
	<option value="<%=cat.id%>"><%=cat.name%></option>
	<% end %>
	</select>
	<br>

	<label for="cat_rental_request_begin_date">Begin Date</label>
	<input name="cat_rental_request[begin_date]" id="cat_begin_date" type="date">
	<br>

	<label for="cat_rental_request_end_date">End Date</label>
	<input name="cat_rental_request[end_date]" id="cat_begin_date" type="date">
	<br>

	<input type="submit" value="Submit Rental Request">
</form>
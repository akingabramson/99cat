<h2><%= @cat.name %></h2>
<ul>
	<li>Age: <%= @cat.age %></li>
	<li>Birthday: <%= @cat.birth_date %></li>
	<li>Color: <%= @cat.color %></li>
	<li>Sex: <%= @cat.sex %></li>
	<ul>
		<% @rentals.each do |rental| %>
		<li>
			Rental: Begins <%= rental.begin_date %>, Ends
			<%= rental.end_date%> 
			<% if rental.status == "undecided"%>
			<form action="/cat_rental_requests/<%= rental.id %>" method="post">
				<input type="submit" value="Approve">
			</form>
			<% end %>
			: <%= rental.status.capitalize %>
		</li>
	<% end %>
	</ul>
</ul>
